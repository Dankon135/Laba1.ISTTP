@model LibraryDomain.Model.ResearcherWork

@{
    ViewData["Title"] = "Edit Researcher Work";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label asp-for="ResearcherId" class="control-label"></label>
                <input asp-for="ResearcherId" class="form-control" />
                <span asp-validation-for="ResearcherId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ScientificWorkId" class="control-label"></label>
                <input asp-for="ScientificWorkId" class="form-control" />
                <span asp-validation-for="ScientificWorkId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Contribution" class="control-label"></label>
                <input asp-for="Contribution" class="form-control" />
                <span asp-validation-for="Contribution" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CreatedAt" class="control-label"></label>
                <input asp-for="CreatedAt" class="form-control" type="date" />
                <span asp-validation-for="CreatedAt" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    body {
        background-color: #333;
        color: #f8f8f8;
    }

    h1 {
        color: #fff;
        margin-bottom: 20px;
    }

    .form-group {
        margin-bottom: 15px;
    }

    .control-label {
        margin-bottom: 5px;
        font-size: 18px;
        color: #f8f8f8;
    }

    .form-control {
        background-color: #555;
        border: 1px solid #666;
        color: #f8f8f8;
        border-radius: 5px;
        padding: 10px;
    }

    .btn-primary {
        background-color: #4CAF50;
        border-color: #4CAF50;
    }

    .btn-secondary {
        background-color: #f0ad4e;
        border-color: #eea236;
    }

    .btn-primary:hover {
        background-color: #45a049;
    }

    .btn-secondary:hover {
        background-color: #ec971f;
    }

    a {
        color: #f8f8f8;
    }

        a:hover {
            color: #ddd;
        }
</style>
